#include <iostream>
using namespace std;

int main() {
    int page[3] = {-1, -1, -1};
    int hit = 0;

    int input[] = {7, 0, 1, 2, 0, 3,4,2,3,0,3,2,1,2,0,1,7,0,1};
    cout << "String\tFrame 1\tFrame 2\tFrame 3\tResult" << endl;

    for (int i = 0; i < 19; i++) {
        bool found = false;
        
        for (int j = 0; j < 3; j++) {
            if (page[j] == input[i]) {
                hit++;
                for (int k = j; k > 0; k--)
                    swap(page[k], page[k - 1]);
                found = true;
                break;
            }
        }

        if (!found) {
            for (int j = 2; j > 0; j--)
                page[j] = page[j - 1];
            page[0] = input[i];
        }

        cout << input[i] << "\t\t" << page[0] << "\t\t" << page[1] << "\t\t" << page[2];
        if (found)
            cout << "\t\tHit" << endl;
        else
            cout << "\t\tMiss" << endl;
    }


    cout << "The total number of page hits is " << hit << endl;

    return 0;
}
